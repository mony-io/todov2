{
  "compilerOptions": {
    "target": "es2015", // or "es6"
    "lib": ["dom", "es2015"], // Add "es2015" or later
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}
